{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./build",
    "esModuleInterop": true,
    "strict": true ,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "typeRoots": [
      "types",
      "./node_modules/@types",
    ] 
  },
  "exclude": [
    "node_modules/",
    "build",
    "coverage"
  ]
}
